    <RoyalTitlePermitDef ParentName="DropResourcesTitle">
        <defName>MeleePermitTitle</defName>
        <label>Melee Weapons</label>
        <description>Request a drop of random melee weapons.</description>
        <modExtensions>
            <li Class="NobilityExpanded.PermitExtensionList">
                <type>Title</type>
                <category>Melee</category>
                <column>0</column>
                <row>0</row>
            </li>
        </modExtensions>
    </RoyalTitlePermitDef>
    
    <!-- Agile -->
  
